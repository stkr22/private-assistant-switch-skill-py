{
	"name": "private-assistant-switch-skill-dev-environment",
	"dockerComposeFile": "compose.yml",
	"service": "dev",
	"workspaceFolder": "/workspace/private-assistant-switch-skill-py",
	"remoteUser": "vscode",
    "features": {
        "ghcr.io/stkr22/devcontainer-features/claude-code:2.0.3": {},
        "ghcr.io/stkr22/devcontainer-features/uv:1.0.0": {}
    },
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"samuelcolvin.jinjahtml",
				"streetsidesoftware.code-spell-checker",
				"christian-kohler.path-intellisense",
				"charliermarsh.ruff",
				"ms-python.mypy-type-checker",
				"tamasfe.even-better-toml",
				"github.vscode-github-actions",
				"oderwat.indent-rainbow",
				"mhutchie.git-graph",
				"vivaxy.vscode-conventional-commits"
			],
			"settings": {
				"files.trimFinalNewlines": true,
				"files.trimTrailingWhitespace": true,
				"files.insertFinalNewline": true,
				"[python]": {
					"editor.formatOnSave": true,
					"editor.codeActionsOnSave": {
						"source.fixAll": "explicit",
						"source.organizeImports": "explicit"
					},
					"editor.defaultFormatter": "charliermarsh.ruff"
				},
				"python.defaultInterpreterPath": "/workspaces/.venv/bin/python",
				"python.testing.unittestEnabled": false,
				"python.testing.pytestEnabled": true,
				"cSpell.files": [
					"src"
				]
			}
		}
	},
	"postCreateCommand": "uv sync --group dev && uv tool run pre-commit install"
}
